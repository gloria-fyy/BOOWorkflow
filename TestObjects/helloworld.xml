<businessclass xmlns="http://www.w3.org/2005/07/scxml"
       version="1.0" inital="firststate">
    
    <state id="firststate">
        <onentry>
            <log expr=" 'entry  firststate' " />
        </onentry>
        <transition event="firststateToEnd" target="end">
        
        </transition>
        <onexit>
            <log expr=" 'exit firststate ' " />
        </onexit>
    </state>
       
    <final id="end">
        <onentry>
            <log expr=" 'entry  final state end ' " />
        </onentry>
        <onexit>
            <log expr=" 'exit  final state end ' " />
        </onexit>
    </final>
    
    
</businessclass>